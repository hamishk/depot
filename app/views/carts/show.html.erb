<p id="notice"><%= notice %></p>

<h2>Your Shopping Cart, Sir</h2>
<ul>
  <% @cart.line_items.each do |line_item| %>
    <li><%= line_item.quantity %> &times; <%= line_item.product.title %></li>
  <% end %>
</ul>

<%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: "Are you sure?" } %> <br>
<%= link_to 'Edit', edit_cart_path(@cart) %>
<%= link_to 'Back', carts_path %>
