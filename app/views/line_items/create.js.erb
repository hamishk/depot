$('#cart').html("<%=j render(@cart) %>");
// This deviates slightly from the example in the book; by rendering the cart first
// we allow the HTML to be completely rendered before the blind animation begins.
// The resulting table will have 2 rows: the new addition and the total row.
if ($('#cart tr').length == 2) { $('#cart').show('blind', 1000); }

$('#current_item').css({'background-color':'#88ff88'}).
  animate({'background-color':'#114411'}, 1000);
